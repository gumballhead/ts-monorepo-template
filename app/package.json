        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.0.1",
        "html-webpack-plugin": "^4.5.1",
        "style-loader": "^2.0.0",
        "typescript": "^4.1.3",
